{
	"name": "sortr",
	"version": "0.1.0",
	"description": "AI-powered local note organization using TypeScript and Bun",
	"main": "src/cli.ts",
	"type": "module",
	"bin": {
		"sortr": "./dist/cli.js"
	},
	"scripts": {
		"dev": "bun run src/cli.ts",
		"build": "bun build src/cli.ts --outdir dist --target bun",
		"compile": "bun build --compile --minify src/cli.ts --outfile sortr",
		"start": "bun run dist/cli.js",
		"test": "bun test",
		"check": "tsc --noEmit"
	},
	"keywords": [
		"notes",
		"organization",
		"ai",
		"llm",
		"ollama",
		"cli",
		"bun",
		"typescript"
	],
	"author": "Your Name",
	"license": "MIT",
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"@xenova/transformers": "^2.17.0",
		"chalk": "^5.3.0",
		"chokidar": "^3.6.0",
		"commander": "^12.0.0",
		"js-yaml": "^4.1.0",
		"ollama": "^0.5.0",
		"ora": "^8.0.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^20.11.0",
		"typescript": "^5.3.3"
	},
	"engines": {
		"bun": ">=1.0.0"
	}
}
